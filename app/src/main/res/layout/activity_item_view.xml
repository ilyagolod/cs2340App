<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    tools:context=".activities.EditItemActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="246dp" />

    <TextView
        android:id="@+id/name_textview_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="None"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="Item Category"
        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="246dp" />

    <TextView
        android:id="@+id/category_textview_item_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nonet"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="Value"
        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="246dp" />

    <TextView
        android:id="@+id/value_textview_item_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="None"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="Donation Time"
        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="246dp" />

    <TextView
        android:id="@+id/time_textview_item_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="None"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="Description"
        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="246dp" />

    <TextView
        android:id="@+id/description_textview_item_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="None"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />
</LinearLayout>